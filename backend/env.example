# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/shieldmaiden
# For Docker:
# MONGODB_URI=mongodb://mongodb:27017/shieldmaiden

# Redis (for rate limiting and queues)
REDIS_URL=redis://localhost:6379
# For Docker:
# REDIS_URL=redis://redis:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URLs (for CORS and share links)
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# File Upload & Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
# 100MB in bytes
STORAGE_QUOTA_PER_USER=1073741824
# 1GB in bytes per user

# File Cleanup
CLEANUP_CRON_SCHEDULE=0 * * * *
# Run every hour at minute 0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_ALGORITHM=aes-256-ctr

